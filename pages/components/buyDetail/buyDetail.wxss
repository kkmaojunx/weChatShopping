/* pages/components/buyDetail/buyDetail.wxss */
.midPart{
  width:100%;
  height: 170rpx;
}
.priceLeft{
  width:60%;
  height: 100%;
  float:left;
  background: #eee;
}
.realPrice{
  width:100%;
  height: 60%;
  font-size: 40rpx;
  text-align: center;
  padding-top: 20rpx;
  font-weight: bold;
}
.discountPrice{
  width:100%;
  height: 40%;
  text-align: center;
  font-size: 30rpx;
}
.priceRight{
  width:40%;
  height: 100%;
  float:right;
  background: teal;
}
.controlBtn{
  width:100%;
  height: 90rpx;
  background: red;
  transition: all 1s;
}
.addToCar{
  border:none;
   border-radius: none;
  background:orange;
  width:30%;
   color:#fff;
   height: 90rpx;
   line-height: 90rpx;
   float: left;
   text-align: center
}
.buyNow{
  border:none;
  border-radius: none;
  background:red;
  width:70%;
  font-size: 40rpx;
   color:#fff;
     height: 90rpx;
     text-align: center;
   line-height: 90rpx;
   float: right;
}
.arrowBottom{
  width:40px;
  height: 40px;
  position: fixed;
  bottom:0;
  left: 0;
  right: 0;
  margin:auto;
  background: transparent;
  border-radius: 4px 4px 6px 6px;
  animation: mm 1s linear infinite;
  transition: all 1s
}
@keyframes mm {
0%{bottom:10px;}
25%{bottom:20px;}
50%{bottom:10px;}
75%{bottom:0px;}
100%{bottom:10px;}
}
.buyBox{
  width:100%;
  height: 80%;
  position: fixed;
  bottom:0;
  left: 0;
  right: 0;
  background: red;
  transition: all 1s;
  transform: scale(0)
}
.submitBtn{
  width:100%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color:#fff;
  background: gold;
  position: absolute;
  bottom:0;
  left:0;
  right: 0;
}