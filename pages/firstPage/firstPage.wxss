/* pages/firstPage/firstPage.wxss */
page{height:100%}
.mainPage{
  width:100%;
  height: 100%;
background: teal;
}
.loginPart{
  border-radius:15px;
  background: #ddd;
  width:80%;
  height:300px;
  position: absolute;
  left: 0;
  right: 0;
  top:40px;
  margin: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  border:1px solid #ccc;
  box-shadow: 0px 3px 10px rgba(0,0,0,0.5)
}
.topTitle{
  width:90%;
  height: 30px;
  font-size: 22px;
  font-weight: bold;
  text-align: center;
  line-height: 30px;
  color:#1f1f1f;
}
.namePart{
width:100%;
display: flex;
flex-wrap: nowrap;
justify-content: center;
align-items: center;
}
.namePart label{
  font-size: 16px;
  color:#000;
}
.namePart input{
  width:66%;
  height: 30px;
  border: 1px solid #ccc;
  border-radius: 8px;
  color:#1f1f1f;
  font-size: 16px;
}
.pwdPart{
width:100%;
display: flex;
flex-wrap: nowrap;
justify-content: center;
align-items: center;
}
.pwdPart label{
  font-size: 16px;
  color:#000;
}
.pwdPart input{
  width:66%;
  height: 30px;
  border: 1px solid #ccc;
  border-radius: 8px;
  color:#1f1f1f;
  font-size: 16px;
}
button{
  width:150px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  background: #abcdef;
 font-size: 20px;
 color:#fff;
}
.bottomLine{
  width:100%;
  height: 30px;
  line-height: 30px;
  text-align: right;
  display: flex;
  justify-content: center;
  align-items: center;
}
p{
  height: 30px;
  font-size: 14px;
  line-height: 30px;
  text-align: right;
}
.jumpHref{
  color:red;
   height: 30px;
  font-size: 14px;
