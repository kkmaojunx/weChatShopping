.swiper-tab {  
  display: flex;  
  flex-direction: row;  
  line-height: 80rpx;  
  border-bottom: 2rpx solid #F08080;  
  background: 	#FFA54F;
}  
  
.tab-item {  
  width: 33.3%;  
  text-align: center;  
  font-size: 15px;  
  color: #777;  
}  
  
.swiper {  
  height: 80%;  
  background: #fff;  
}  
  
.on {  
  font-size: 18px;
  color:#DB7093;  
  border-bottom: 5rpx solid #F08080;  
}  
.personStyle{
  width:48%;
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  background: #ccc;
  border-radius: 5px;
}
.closeStyle{
  position:absolute;
right:0px;
top:0px;
color:#aaa;
